            align-items: center;
            color: white;
            font-family: 'Verdana', sans-serif; /* Шрифт для текста */
            font-size: 16px;
            border-radius: 10px;
            text-align: center; /* Центрирование текста по горизонтали */
            padding: 10px;
        }

        .flex-card h2 {
            font-family: 'Georgia', serif;
            font-size: 20px;
            margin: 0;
        }

        .flex-card p {
            font-size: 14px;
        }

        /* Карточка на весь экран */
        .full-screen-card {
            background-color: #FF6347; /* Цвет карточки на весь экран */
            width: 100%;
            height: 100vh; /* Высота на весь экран */
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-family: 'Verdana', sans-serif;
            font-size: 16px;
            border-radius: 10px;
            text-align: center;
            padding: 20px;
            margin-top: 20px; /* Увеличен отступ сверху */
        }

        .full-screen-card h2 {
            font-family: 'Georgia', serif;
            font-size: 30px;
        }

        .full-screen-card p {
            font-size: 18px;
        }

        /* Grid */
        .grid-container {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 20px;
            margin-top: 40px;
        }

        .grid-card {
            background-color: #98FB98; /* Цвет карточек для Grid */
            height: 250px;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-family: 'Verdana', sans-serif;
            font-size: 16px;
            border-radius: 10px;
            text-align: center;
            padding: 10px;
        }

        .grid-card h2 {
            font-family: 'Georgia', serif;
            font-size: 20px;
            margin: 0;
        }

        .grid-card p {
            font-size: 14px;
        }

        /* Для карточек разных цветов */
        .flex-card:nth-child(odd) {
            background-color: #FF6347;
        }

        .grid-card:nth-child(odd) {
            background-color: #87CEEB;
        }

        /* Мобильная версия */
        @media (max-width: 768px) {
            .grid-container {
                grid-template-columns: repeat(2, 1fr);
            }

            .flex-container {
                flex-direction: column;
                align-items: center;
            }

            .full-screen-card {
                height: 50vh; /* На мобильных устройствах уменьшаем высоту карточки на весь экран */
            }
        }
    </style>
</head>
